{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/tsconfig.common.json",
      "**/tsconfig.node.json",
      "**/tsconfig.app.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "security": {
        "all": true
      },
      "complexity": {
        "useArrowFunction": "off"
      },
      "correctness": {
        "all": true,
        "noUndeclaredDependencies": "off",
        "noNodejsModules": "off",
        "useImportExtensions": "off"
      },
      "nursery": {
        "useComponentExportOnlyModules": "warn"
      },
      "style": {
        "useFragmentSyntax": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "asNeeded"
    }
  }
}
